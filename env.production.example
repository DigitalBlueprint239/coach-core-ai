# Coach Core AI - Production Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# FIREBASE CONFIGURATION
# ============================================

REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=coach-core-ai.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=coach-core-ai
REACT_APP_FIREBASE_STORAGE_BUCKET=coach-core-ai.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=384023691487
REACT_APP_FIREBASE_APP_ID=1:384023691487:web:your_app_id_here
REACT_APP_FIREBASE_MEASUREMENT_ID=G-02HW7QDJLY

# ============================================
# AI SERVICE CONFIGURATION
# ============================================

# OpenAI API Configuration (for direct API calls)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# AI Proxy Configuration (recommended for production)
REACT_APP_AI_PROXY_ENDPOINT=https://your-domain.com/api/ai
REACT_APP_AI_PROXY_TOKEN=your_secure_proxy_token_here

# AI Service Settings
REACT_APP_AI_MODEL=gpt-4
REACT_APP_AI_MAX_TOKENS=2000
REACT_APP_AI_TEMPERATURE=0.7
REACT_APP_USE_AI_PROXY=true

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment
NODE_ENV=production
REACT_APP_ENVIRONMENT=production

# App Configuration
REACT_APP_APP_NAME=Coach Core AI
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_URL=https://your-domain.com

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_OFFLINE=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true

# ============================================
# PERFORMANCE CONFIGURATION
# ============================================

# Cache Settings
REACT_APP_CACHE_TTL=300000
REACT_APP_MAX_CACHE_SIZE=50
REACT_APP_ENABLE_CACHE=true

# Offline Settings
REACT_APP_OFFLINE_QUEUE_SIZE=100
REACT_APP_OFFLINE_SYNC_INTERVAL=30000
REACT_APP_ENABLE_OFFLINE_PERSISTENCE=true

# API Settings
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRIES=3
REACT_APP_API_BASE_URL=https://your-api-domain.com

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Rate Limiting
REACT_APP_RATE_LIMIT_ENABLED=true
REACT_APP_RATE_LIMIT_MAX_REQUESTS=100
REACT_APP_RATE_LIMIT_WINDOW_MS=900000

# Content Security Policy
REACT_APP_CSP_ENABLED=true
REACT_APP_CSP_REPORT_URI=https://your-domain.com/csp-report

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Error Reporting
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_SENTRY_ENVIRONMENT=production

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=G-02HW7QDJLY
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token_here

# Performance Monitoring
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_PERFORMANCE_THRESHOLD=3000

# ============================================
# INTEGRATION CONFIGURATION
# ============================================

# Third-party Services
REACT_APP_ENABLE_HUDL_INTEGRATION=false
REACT_APP_HUDL_CLIENT_ID=your_hudl_client_id_here
REACT_APP_HUDL_CLIENT_SECRET=your_hudl_client_secret_here
REACT_APP_HUDL_REDIRECT_URI=https://your-domain.com/auth/hudl/callback

# Email Service
REACT_APP_EMAIL_SERVICE_ENABLED=true
REACT_APP_EMAIL_FROM=noreply@your-domain.com
REACT_APP_EMAIL_SERVICE_URL=https://your-email-service.com

# ============================================
# STORAGE CONFIGURATION
# ============================================

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
REACT_APP_ENABLE_FILE_COMPRESSION=true

# CDN Configuration
REACT_APP_CDN_URL=https://cdn.your-domain.com
REACT_APP_CDN_ENABLED=true

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================

# Debug Settings (disable in production)
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=error
REACT_APP_ENABLE_DEV_TOOLS=false

# Emulator Settings (disable in production)
REACT_APP_USE_EMULATOR=false
REACT_APP_EMULATOR_HOST=localhost
REACT_APP_EMULATOR_PORT=8080

# ============================================
# CUSTOMIZATION
# ============================================

# Branding
REACT_APP_BRAND_NAME=Coach Core AI
REACT_APP_BRAND_COLOR=#0084ff
REACT_APP_BRAND_LOGO=https://your-domain.com/logo.png

# Features
REACT_APP_ENABLE_TEAM_MANAGEMENT=true
REACT_APP_ENABLE_PRACTICE_PLANNING=true
REACT_APP_ENABLE_PLAYBOOK=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_AI_ASSISTANT=true

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Build Configuration
GENERATE_SOURCEMAP=false
REACT_APP_BUILD_TIMESTAMP=${BUILD_TIMESTAMP}
REACT_APP_GIT_COMMIT=${GIT_COMMIT}
REACT_APP_GIT_BRANCH=${GIT_BRANCH}

# Health Check
REACT_APP_HEALTH_CHECK_ENDPOINT=https://your-domain.com/health
REACT_APP_HEALTH_CHECK_INTERVAL=60000 