# Coach Core AI - Production Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# FIREBASE CONFIGURATION
# ============================================

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=coach-core-ai.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=coach-core-ai
VITE_FIREBASE_STORAGE_BUCKET=coach-core-ai.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=384023691487
VITE_FIREBASE_APP_ID=1:384023691487:web:your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=G-02HW7QDJLY

# ============================================
# AI SERVICE CONFIGURATION
# ============================================

# OpenAI API Configuration (for direct API calls)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# AI Proxy Configuration (recommended for production)
VITE_AI_PROXY_ENDPOINT=https://your-domain.com/api/ai
VITE_AI_PROXY_TOKEN=your_secure_proxy_token_here

# AI Service Settings
VITE_AI_MODEL=gpt-4
VITE_AI_MAX_TOKENS=2000
VITE_AI_TEMPERATURE=0.7
VITE_USE_AI_PROXY=true

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment
VITE_ENVIRONMENT=production

# App Configuration
VITE_APP_NAME=Coach Core AI
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://your-domain.com

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# ============================================
# PERFORMANCE CONFIGURATION
# ============================================

# Cache Settings
VITE_CACHE_TTL=300000
VITE_MAX_CACHE_SIZE=50
VITE_ENABLE_CACHE=true

# Offline Settings
VITE_OFFLINE_QUEUE_SIZE=100
VITE_OFFLINE_SYNC_INTERVAL=30000
VITE_ENABLE_OFFLINE_PERSISTENCE=true

# API Settings
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3
VITE_API_BASE_URL=https://your-api-domain.com

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Rate Limiting
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=900000

# Content Security Policy
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_URI=https://your-domain.com/csp-report

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Error Reporting
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ENVIRONMENT=production

# Analytics
VITE_GA_MEASUREMENT_ID=G-02HW7QDJLY
VITE_ENABLE_ANALYTICS=true
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_THRESHOLD=3000

# ============================================
# INTEGRATION CONFIGURATION
# ============================================

# Third-party Services
VITE_ENABLE_HUDL_INTEGRATION=false
VITE_HUDL_CLIENT_ID=your_hudl_client_id_here
VITE_HUDL_CLIENT_SECRET=your_hudl_client_secret_here
VITE_HUDL_REDIRECT_URI=https://your-domain.com/auth/hudl/callback

# Email Service
VITE_EMAIL_SERVICE_ENABLED=true
VITE_EMAIL_FROM=noreply@your-domain.com
VITE_EMAIL_SERVICE_URL=https://your-email-service.com

# ============================================
# STORAGE CONFIGURATION
# ============================================

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
VITE_ENABLE_FILE_COMPRESSION=true

# CDN Configuration
VITE_CDN_URL=https://cdn.your-domain.com
VITE_CDN_ENABLED=true

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================

# Debug Settings (disable in production)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_ENABLE_DEV_TOOLS=false

# Emulator Settings (disable in production)
VITE_USE_EMULATOR=false
VITE_EMULATOR_HOST=localhost
VITE_EMULATOR_PORT=8080

# ============================================
# CUSTOMIZATION
# ============================================

# Branding
VITE_BRAND_NAME=Coach Core AI
VITE_BRAND_COLOR=#0084ff
VITE_BRAND_LOGO=https://your-domain.com/logo.png

# Features
VITE_ENABLE_TEAM_MANAGEMENT=true
VITE_ENABLE_PRACTICE_PLANNING=true
VITE_ENABLE_PLAYBOOK=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_ASSISTANT=true

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Build Configuration
GENERATE_SOURCEMAP=false
VITE_BUILD_TIMESTAMP=${BUILD_TIMESTAMP}
VITE_GIT_COMMIT=${GIT_COMMIT}
VITE_GIT_BRANCH=${GIT_BRANCH}

# Health Check
VITE_HEALTH_CHECK_ENDPOINT=https://your-domain.com/health
VITE_HEALTH_CHECK_INTERVAL=60000 